<!-- Loop over each object in the posts array -->
<div id="post-holder">
{{#each posts as |post| }}
<div class="row mb-4 project" id="post-box">
  <div id="post-header">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
        <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div id="post-description">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
</div>
