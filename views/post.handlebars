<div class="container">
  <div class="row">
    <div class="col-md-8">
      {{!-- Display Post --}}
      <div class="post">
        <h2>{{ name }}</h2>
        <p>{{ description }}</p>
        <p>Posted by: {{ user.name }}</p>
        <p>Date Created: {{ date_created }}</p>
      </div>

      {{!-- Display Comments --}}
      <div class="comments">
        <h3>Comments</h3>
        {{#each comments}}
        <div class="comment">
          <p><strong>{{ user.name }}</strong> said:</p>
          <p>{{ description }}</p>
        </div>
        {{/each}}
      </div>
      <div>
        {{#if logged_in}}
        <form class="form new-comment-form" id="comment-form">
          <input type="hidden" id="post-id" name="post_id" value="{{id}}" />

          <div class="form-group" id="comment-creator">
            <label for="comment-description">Comment:</label>
            <input class="form-input" type="text" id="comment-description" name="description" />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Post Comment</button>
          </div>
        </form>

        {{/if}}

      </div>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>