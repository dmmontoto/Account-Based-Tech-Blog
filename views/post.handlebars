<div class="container">
  <div class="row">
    <div>
      {{!-- Display Post --}}
      <div class="post" id="post-box">
        <div id="post-header">
          <h2>{{ name }}</h2>
        </div>
        <p>{{ description }}</p>
        <p>Posted by: {{ user.username }}</p>
        <p>Date Posted: {{ format_date date_created }}</p>
      </div>

      {{!-- Display Comments --}}
      <div class="comments">
        <div class="align-center" id="comment-title">
          <h3>Comments</h3>
        </div>
        {{#each comments}}
        <div class="comment" id="comment">
          <p><strong>{{ user.username }}</strong> said:</p>
          <p id="comment-description">{{ description }}</p>
          <p>Date posted: {{ format_date date_created }}</p>
        </div>
        {{/each}}
      </div>
      <div>
        {{#if logged_in}}
        <form class="form new-comment-form" id="comment-form">
          <input type="hidden" id="post-id" name="post_id" value="{{id}}" />

          <div class="form-group" id="comment-creator">
            <label for="comment-description">Add Comment:</label>
            <input class="form-input" type="text" id="comment-description" name="description" />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Post Comment</button>
          </div>
        </form>

        {{/if}}

      </div>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>